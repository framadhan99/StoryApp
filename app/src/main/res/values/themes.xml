<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SubmissionStoryApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/biru_cerah</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>


        <item name="android:windowEnterTransition">@transition/change_bounds</item>
        <item name="android:windowExitTransition">@transition/change_bounds</item>
        <item name="android:windowSharedElementEnterTransition">@transition/change_bounds</item>
        <item name="android:windowSharedElementExitTransition">@transition/change_bounds</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">false</item>

        <item name="fontFamily">@font/poppins</item>

        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:statusBarColor" tools:targetApi="23">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ToolbarText">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Fullscreen" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>